<div
  class="hidden fixed inset-0 z-10 flex items-center justify-center backdrop-blur-sm <%= user.settings.theme === 'dark' ? 'bg-dark-background text-dark-text' : ' text-text bg-primary' %> bg-opacity-50 p-5 md:p-0 z-50"
  id="featureModal"
  onclick="closeFeatureModal()"
>
  <div
    class="<%= user.settings.theme === 'dark' ? 'bg-dark-background text-dark-text' : 'bg-white text-gray-900' %> p-6 rounded-lg w-full m-auto md:w-1/2 grid grid-cols-2 gap-2 md:gap-6"
    onclick="event.stopPropagation()"
  >
    <div class="flex items-center justify-between col-span-2">
      <h2 class="text-xl font-semibold font-sans">Feature Blog</h2>
      <button
        onclick="closeFeatureModal()"
        class="text-gray-400 hover:text-red-500 transition duration-200 text-xl"
        aria-label="Close"
      >
        &times;
      </button>
    </div>

    <div
      class="max-w-sm w-full shadow-lg rounded-lg border <%= user.settings.theme === 'dark' ? 'bg-dark-sixth border-dark-background' : 'bg-background border-fifth' %> p-2 md:p-6 hover:shadow-xl transition-shadow duration-300 ease-in-out transform hover:scale-105 flex flex-col justify-between items-center"
    >
      <div class="flex justify-center mb-4">
        <img
          src="images/icons/silverIcon.png"
          alt="Silver Icon"
          class="h-10 md:h-16"
        />
      </div>
      <h1
        class="text-sm sm:text-base md:text-lg lg:text-xl font-bold <%= user.settings.theme === 'dark' ? 'text-dark-primary' : 'text-primary' %> mb-2 text-center"
      >
        Basic
      </h1>
      <ul
        class="<%= user.settings.theme === 'dark' ? 'text-dark-secondary' : 'text-secondary' %> text-xxs md:text-sm mb-6 space-y-2 text-center"
      >
        <li>Featured only among followers</li>
        <li>Featured only for 1 week</li>
        <li>Featured only once</li>
        <li>Non-refundable</li>
      </ul>
      <div
        class="flex justify-center text-base sm:text-lg md:text-xl font-semibold <%= user.settings.theme === 'dark' ? 'text-dark-primary' : 'text-primary' %> mb-10 md:mb-16"
      >
        <% if(user.subscription =="regular" ||user.subscription =="elite" ||
        freeBlogsLeft<=0) {%> $5 <% } else {%> Free <% } %>
      </div>
      <div class="flex justify-center w-full">
        <% if(user.subscription =="regular" ||user.subscription =="elite" ||
        freeBlogsLeft<=0) {%>
        <form action="/api/payment/create" method="POST" class="w-full">
          <input type="hidden" name="amount" value="5" />
          <input type="hidden" name="currency" value="USD" />
          <input type="hidden" name="paymentType" value="featured" />
          <input type="hidden" id="modalBlogId" name="blog" value="" />
          <input
            type="hidden"
            name="featuredDetails[featureDuration]"
            value="7"
          />
          <button
            class="btn-with-loader relative <%= user.settings.theme === 'dark' ? 'bg-dark-fifth text-dark-primary hover:bg-dark-fourth' : 'border-tertiary text-sixth bg-tertiary hover:bg-fourth' %> rounded-md  transition duration-300 w-full text-xs sm:text-base md:text-lg lg:text-xl p-2 font-roboto"
            type="submit"
          >
            <div
              class="loader-inner ball-beat hidden absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2"
            >
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full"
              ></div>
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full mx-1"
              ></div>
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full"
              ></div>
            </div>
            <span class="btn-text inline-block">Pay</span>
          </button>
        </form>
        <% } else {%>
        <form action="/api/payment/create" method="POST" class="w-full">
          <input type="hidden" name="amount" value="free" />
          <input type="hidden" name="paymentType" value="featured" />
          <input type="hidden" id="modalBlogId" name="blog" value="" />
          <input
            type="hidden"
            name="featuredDetails[featureDuration]"
            value="7"
          />
          <button
            class="btn-with-loader relative <%= user.settings.theme === 'dark' ? 'bg-dark-fifth text-dark-primary hover:bg-dark-fourth' : 'border-tertiary text-sixth bg-tertiary hover:bg-fourth' %> rounded-md hover:bg-fourth transition duration-300 w-full text-xs sm:text-base md:text-lg lg:text-xl p-2 font-roboto"
            type="submit"
          >
            <div
              class="loader-inner ball-beat hidden absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2"
            >
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full"
              ></div>
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full mx-1"
              ></div>
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full"
              ></div>
            </div>
            <span class="btn-text inline-block">
              <%= freeBlogsLeft %> free blogs
            </span>
          </button>
        </form>
        <% } %>
      </div>
    </div>

    <div
      class="max-w-sm w-full shadow-lg rounded-lg border <%= user.settings.theme === 'dark' ? 'bg-dark-sixth border-dark-background' : 'bg-background border-fifth' %> p-2 md:p-6 hover:shadow-xl transition-shadow duration-300 ease-in-out transform hover:scale-105 flex flex-col justify-between items-center"
    >
      <div class="flex justify-center mb-4">
        <img
          src="images/icons/goldIcon.png"
          alt="Gold Icon"
          class="h-10 md:h-16"
        />
      </div>
      <div class="text-center mb-2">
        <h1
          class="text-sm sm:text-base md:text-lg lg:text-xl font-bold <%= user.settings.theme === 'dark' ? 'text-dark-primary' : 'text-primary' %>"
        >
          Pro
        </h1>
      </div>
      <ul
        class="<%= user.settings.theme === 'dark' ? 'text-dark-secondary' : 'text-secondary' %> text-xxs sm:text-sm mb-6 space-y-2 text-center"
      >
        <li>Featured among all users</li>
        <li>Featured for 1 month</li>
        <li>Featured thrice</li>
        <li>Feature can be shared</li>
      </ul>
      <div
        class="flex justify-center text-base sm:text-lg md:text-xl font-semibold <%= user.settings.theme === 'dark' ? 'text-dark-primary' : 'text-primary' %> mb-10 md:mb-16"
      >
        <% if(user.subscription =="regular" ||user.subscription =="pro" ||
        freeBlogsLeft<=0) {%> $15 <% } else {%> Free <% } %>
      </div>
      <div class="flex justify-center w-full">
        <% if(user.subscription =="regular" ||user.subscription =="pro" ||
        freeBlogsLeft<=0) {%>
        <form action="/api/payment/create" method="POST" class="w-full">
          <input type="hidden" name="amount" value="15" />
          <input type="hidden" name="paymentType" value="featured" />
          <input type="hidden" name="currency" value="USD" />
          <input type="hidden" id="modalBlogIdPro" name="blog" value="" />
          <input
            type="hidden"
            name="featuredDetails[featureDuration]"
            value="30"
          />

          <button
            class="btn-with-loader relative <%= user.settings.theme === 'dark' ? ' bg-dark-fourth hover:bg-dark-tertiary' : ' border-secondary text-sixth bg-secondary hover:bg-tertiary' %> rounded-md font-semibold p-2  transition duration-300 w-full text-xs sm:text-base md:text-lg lg:text-xl font-roboto"
            type="submit"
          >
            <div
              class="loader-inner ball-beat hidden absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2"
            >
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full"
              ></div>
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full mx-1"
              ></div>
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full"
              ></div>
            </div>
            <span class="btn-text inline-block">Pay</span>
          </button>
        </form>
        <% } else {%>
        <form action="/api/payment/create" method="POST" class="w-full">
          <input type="hidden" name="amount" value="free" />
          <input type="hidden" name="paymentType" value="featured" />
          <input type="hidden" id="modalBlogIdPro" name="blog" value="" />
          <input
            type="hidden"
            name="featuredDetails[featureDuration]"
            value="30"
          />

          <button
            class="btn-with-loader relative <%= user.settings.theme === 'dark' ? ' bg-dark-sixth' : ' border-secondary text-sixth bg-secondary' %> rounded-md font-semibold p-2 hover:bg-tertiary transition duration-300 w-full text-xs sm:text-base md:text-lg lg:text-xl font-roboto"
            type="submit"
          >
            <div
              class="loader-inner ball-beat hidden absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2"
            >
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full"
              ></div>
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full mx-1"
              ></div>
              <div
                class="w-2 h-2 sm:w-2.5 sm:h-2.5 md:w-3 md:h-3 bg-white rounded-full"
              ></div>
            </div>
            <span class="btn-text inline-block">
              <%= freeBlogsLeft %> free blogs
            </span>
          </button>
        </form>
        <% } %>
      </div>
      <div
        class="absolute top-0 right-0 bg-green-500 text-white text-xxxs sm:text-xxs md:text-xs px-2 py-1 rounded-bl-lg rounded-tr-lg"
      >
        Best Value
      </div>
    </div>
  </div>
</div>
<script>
  
 document.querySelectorAll("#featureModal form").forEach((form) => {
  form.addEventListener("submit", function () {
    const clickedBtn = form.querySelector(".btn-with-loader");
    if (clickedBtn) {
      showBtnLoader(clickedBtn);
    }

    document.querySelectorAll("#featureModal .btn-with-loader").forEach((btn) => {
      btn.disabled = true;
      btn.classList.add("opacity-60", "cursor-not-allowed");
    });
  });
});
</script>
