<script>
    function aboutPageWrite() {
  const writeButton = document.querySelector(".write-link");
  const isAuthenticated = <%= isAuthenticated %>;

  if (isAuthenticated) {
    if (writeButton) writeButton.click();
  } else {
    window.location.href = "/signin";
  }
}

function toggleLearnMore(){
    const learnMoreSection = document.getElementById("learnMore");
    const learnMoreButton = document.getElementById("learnMoreButton");
    
    if (learnMoreSection.style.display === "none" || learnMoreSection.style.display === "") {
        learnMoreSection.style.display = "block";
        learnMoreButton.textContent = "Hide Details";
    } else {
        learnMoreSection.style.display = "none";
        learnMoreButton.textContent = "Learn More";
    }
}
</script>