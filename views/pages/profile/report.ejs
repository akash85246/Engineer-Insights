<%- include("../../partials/profileFeaturedBlog.ejs")%>
<div></div>
<div
  class="sm:col-span-3 md:col-span-3 lg:col-span-4 p-3 px-2 md:px-2 lg:px-5 max-w-full overflow-x-auto box-border"
>
 
 <!-- Tab Navigation -->
  <div
    class="relative <%= user.settings.theme === 'dark' ? 'bg-dark-fifth' : ' text-text ' %> rounded-md rounded-b-none p-1 w-full mt-4 transition-shadow" 
    style="box-shadow: inset 0 -20px 50px -10px rgba(0, 0, 0, 0.25);"
  >
    <!-- Sliding Background -->
    <div
      id="slider"
      class="absolute <%= user.settings.theme === 'dark' ? 'bg-dark-tertiary' : 'bg-white' %> rounded-t-md top-0 left-0 h-[calc(100%-0px)] w-[calc(50%-0px)] transform transition-transform duration-300 ease-in-out  z-0 "
    ></div>

    <!-- Buttons -->
    <div class="relative z-10 grid grid-cols-2">
      <button
        id="reportsBtn"
        class="<%= user.settings.theme === 'dark' ? 'text-dark-background' : 'text-gray-800' %> font-semibold py-2 px-3 sm:px-4 text-center rounded-t-md focus:outline-none font-roboto text-sm sm:text-base md:text-lg"
        onclick="toggleTab('reports')"
      >
        Reports
      </button>
      <button
        id="reportedBlogsBtn"
        class="<%= user.settings.theme === 'dark' ? 'text-dark-background' : 'text-gray-600 ' %>  py-2 px-3 sm:px-4 text-center rounded-md focus:outline-none font-roboto w-full h-full text-sm sm:text-base md:text-lg font-semibold"
        onclick="toggleTab('reportedBlogs')"
      >
        Reported Blogs
      </button>
    </div>
  </div>
  <!-- Content Sections -->

  <div
    id="reportsContent"
    class="transition-opacity duration-300 ease-in-out opacity-100   <%= user.settings.theme === 'dark' ? 'bg-dark-fifth' : 'bg-white' %>  z-10 box-border shadow-lg rounded-md p-2"
  >
    <%- include("../../partials/reportedBlogs.ejs") %>
  </div>
  <div
    id="reportedBlogsContent"
    class="transition-opacity duration-300 ease-in-out opacity-0 hidden  <%= user.settings.theme === 'dark' ? 'bg-dark-fifth' : 'bg-white' %> rounded-md p-2 z-10 box-border shadow-lg"
  >
    <%- include("../../partials/userReportedBlogs.ejs") %>
  </div>
</div>

<script>
  function toggleTab(tab) {
    const slider = document.getElementById("slider");
    const reportsBtn = document.getElementById("reportsBtn");
    const reportedBlogsBtn = document.getElementById("reportedBlogsBtn");
    const reportsContent = document.getElementById("reportsContent");
    const reportedBlogsContent = document.getElementById(
      "reportedBlogsContent"
    );

    if (tab === "reports") {
      // Move the slider to the left
      slider.style.transform = "translateX(0)";

      // Update button styles
      reportsBtn.classList.add("text-gray-800");
      reportsBtn.classList.remove("text-gray-600");
      reportedBlogsBtn.classList.add("text-gray-600");
      reportedBlogsBtn.classList.remove("text-gray-800");

      // Show reports content and hide reported blogs content
      reportsContent.classList.remove("hidden");
      reportsContent.classList.add("opacity-100");
      reportedBlogsContent.classList.add("hidden");
      reportedBlogsContent.classList.remove("opacity-100");
    } else if (tab === "reportedBlogs") {
      // Move the slider to the right
      slider.style.transform = "translateX(100%)";

      // Update button styles
      reportsBtn.classList.add("text-gray-600");
      reportsBtn.classList.remove("text-gray-800");
      reportedBlogsBtn.classList.add("text-gray-800");
      reportedBlogsBtn.classList.remove("text-gray-600");

      // Show reported blogs content and hide reports content
      reportedBlogsContent.classList.remove("hidden");
      reportedBlogsContent.classList.add("opacity-100");
      reportsContent.classList.add("hidden");
      reportsContent.classList.remove("opacity-100");
    }
  }
</script>
